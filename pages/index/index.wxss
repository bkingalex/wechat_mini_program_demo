swiper {
  width: 100%;
  height: 340rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 340rpx;
}

/* product list */

.product-list {
}

.product-item {
  overflow: hidden;
  padding: 30rpx;
  border: solid 1rpx #9a9a9a;
}

.product-logo {
  float: left;
  width: 190rpx;
  height: 190rpx;
}

.product-body {
  margin-left: 200rpx;
}

.product-title {
  color: #212121;
  font-size: 20px;
  line-height: 1;
}

.product-desc {
  font-size: 26rpx;
  color: #9a9a9a;
  line-height: 1;
}

.product-footer {
  overflow: hidden;
}

.btn-detail {
  font-size: 30rpx;
  float: left;
  width: 200rpx;
  height: 55rpx;
  line-height: 55rpx;
  background-color: rgb(9, 156, 224);
}

.btn-talk {
  font-size: 30rpx;
  float: left;
  width: 200rpx;
  height: 55rpx;
  line-height: 55rpx;
  background-color: #FFF;
  margin-left: 10rpx; 
}
